<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#242951"
    android:id="@+id/container">

    <ImageView
        android:id="@+id/char_avatar"
        android:layout_width="123dp"
        android:layout_height="117dp"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/char_venti"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/char_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="27dp"
        android:fontFamily="@font/genshin_font"
        android:shadowColor="@color/teal_200"
        android:shadowRadius="5"
        android:text="Venti"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/char_avatar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/char_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="91dp"
        android:fontFamily="@font/genshin_font"
        android:shadowColor="@color/teal_200"
        android:shadowRadius="5"
        android:text="Anemo Bow"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/char_avatar"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/char_element"
        android:layout_width="95dp"
        android:layout_height="88dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="7dp"
        android:src="@drawable/anemo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>